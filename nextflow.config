manifest {
    description = 'Simulation pipeline for ldhat'
    nextflowVersion = '>= 20.10.0'
}

process {
    conda = 'environment.yaml'
    container = 'sim_ldhat/sim_ldhat:latest'

    executor = 'local'
    scratch = true

    cpus  = 4
    memory = 12.GB
    time = 5.h

    maxForks = 1
}

docker {
    enabled = true
}

singularity {
    enabled = false
}

tower {
    accessToken = ''
    enabled = false
}