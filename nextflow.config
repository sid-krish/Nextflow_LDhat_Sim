manifest {
    description = 'Simulation pipeline for ldhat'
    nextflowVersion = '>= 20.10.0'
}

process {
    conda = 'enviroment.yaml'
    container = 'sim_ldhat/sim_ldhat:latest'

    executor = 'pbs'
    scratch = true
    cpus  = 6
    memory = 32.GB
    time = 5.h
}

docker {
    enabled = false
}

singularity {
    enabled = false
}

tower {
    accessToken = ''
    enabled = false
}